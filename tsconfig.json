{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "target": "esnext",
    "declaration": false,
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "importHelpers": false
  },
  "include": [
    "src",
    "**.js",
    "**.cjs"
  ]
}
