{
  "name": "cra-template-npm-library",
  "version": "2.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "react",
    "create-react-app",
    "cra-template",
    "template",
    "react-testing-library",
    "testing-library",
    "eslint",
    "npm",
    "rollup",
    "stylelint",
    "library",
    "babel",
    "publish",
    "create-react-library",
    "typescript"
  ],
  "description": "Create React App template to build and publish NPM libraries with Typescript support, and rollup, eslint and stylelint configurations",
  "main": "template.json",
  "module": "dist/index.esm.js",
  "style": "dist/style.css",
  "types": "dist/types.d.ts",
  "files": [
    "template",
    "template.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/morewings/cra-template-npm-library",
    "directory": "/"
  },
  "homepage": "https://morewings.github.io/cra-template-npm-library/",
  "bugs": {
    "url": "https://github.com/morewings/cra-template-npm-library/issues"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "11.1.5",
    "@storybook/addon-essentials": "7.5.3",
    "@storybook/addon-interactions": "7.5.3",
    "@storybook/addon-links": "7.6.1",
    "@storybook/blocks": "7.5.3",
    "@storybook/preset-create-react-app": "7.6.1",
    "@storybook/react": "7.5.3",
    "@storybook/react-webpack5": "7.5.3",
    "@storybook/testing-library": "0.2.2",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "27.0.1",
    "@types/lodash": "4.14.202",
    "@types/node": "16.7.13",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.12.0",
    "@yelo/rollup-node-external": "1.0.1",
    "autoprefixer": "9.8.8",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-ssr-friendly": "1.2.0",
    "eslint-plugin-storybook": "0.6.15",
    "husky": "8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "3.0.1",
    "lint-staged": "15.1.0",
    "npm-run-all": "4.1.5",
    "postcss-preset-env": "9.3.0",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "recursive-copy": "2.0.14",
    "rimraf": "4.4.1",
    "rollup": "3.29.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "storybook": "7.5.3",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "4.8.4",
    "webpack": "5.89.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "clean:lib": "rm -rf dist",
    "compile:lib": "rollup -c",
    "build:lib": "run-s clean:lib compile:lib",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:code": "eslint ./src/",
    "fix:code": "run-s 'lint:js --fix'",
    "lint:types": "tsc --pretty --noEmit",
    "lint:style": "stylelint ./src/**/*.css",
    "fix:style": "run-s 'lint:style --fix'",
    "clean:files": "node ./cleanFiles.js",
    "copy:files": "node ./copyFiles.js",
    "write:template": "node ./writeTemplateConfig.js",
    "prepublishOnly": "run-s clean:files copy:files write:template",
    "start:docs": "storybook dev -p 6006",
    "build:docs": "storybook build",
    "prepare": "is-ci || husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
