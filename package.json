  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "clean:lib": "rm -rf dist",
    "compile:lib": "rollup -c",
    "build:lib": "run-s clean:lib compile:lib",
    "build:lib:local": "REACT_APP_PKG_MAIN=lib/index.cjs.js REACT_APP_PKG_MODULE=lib/index.esm.js REACT_APP_PKG_STYLE=lib/default.css run-s build:lib",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:js": "eslint ./src/",
    "fix:js": "run-s 'lint:js --fix'",
    "lint:types": "tsc --pretty --noEmit",
    "lint:style": "stylelint ./src/**/*.css",
    "fix:style": "run-s 'lint:style --fix'",
    "clean:files": "node ./cleanFiles.js",
    "copy:files": "node ./copyFiles.js",
    "write:template": "node ./writeTemplateConfig.js",
    "prepublishOnly": "run-s clean:files copy:files write:template",
    "start:docs": "start-storybook -p 6006",
    "build:docs": "build-storybook",
    "prepare": "is-ci || husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
