{
  "name": "cra-template-npm-library",
  "version": "1.2.2",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "description": "Create React App template to build and publish NPM libraries with rollup, eslint and stylelint",
  "main": "template.json",
  "keywords": [
    "react",
    "create-react-app",
    "cra-template",
    "template",
    "react-testing-library",
    "testing-library",
    "eslint",
    "npm",
    "rollup",
    "stylelint",
    "library",
    "babel",
    "publish",
    "create-react-library"
  ],
  "files": [
    "template",
    "template.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/morewings/cra-template-npm-library",
    "directory": "/"
  },
  "homepage": "https://morewings.github.io/cra-template-npm-library/",
  "bugs": {
    "url": "https://github.com/morewings/cra-template-npm-library/issues"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.20.7",
    "@babel/core": "7.21.4",
    "@babel/eslint-parser": "7.19.1",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/runtime": "7.21.0",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/node-logger": "6.5.16",
    "@storybook/preset-create-react-app": "4.1.2",
    "@storybook/react": "6.5.16",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "autoprefixer": "9.8.8",
    "babel-eslint": "10.1.0",
    "eslint": "8.37.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-flowtype": "8.0.2",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.2.0",
    "npm-run-all": "4.1.5",
    "postcss-preset-env": "8.3.0",
    "prettier": "2.8.4",
    "react-scripts": "5.0.1",
    "recursive-copy": "2.0.14",
    "rimraf": "4.4.1",
    "rollup": "2.79.1",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-filesize": "10.0.0",
    "rollup-plugin-includepaths": "0.2.4",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-terser": "7.0.2",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "29.0.0",
    "stylelint-order": "6.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:lib": "npx rollup -c",
    "build:lib:local": "REACT_APP_PKG_MAIN=lib/index.cjs.js REACT_APP_PKG_MODULE=lib/index.esm.js REACT_APP_PKG_STYLE=lib/default.css yarn build:lib",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "fix:js": "npx eslint --fix ./src/",
    "lint:js": "npx eslint ./src/",
    "lint:style": "npx stylelint ./src/**/*.css",
    "fix:style": "yarn lint:style --fix",
    "clean:files": "node ./cleanFiles.js",
    "copy:files": "node ./copyFiles.js",
    "write:template": "node ./writeTemplateConfig.js",
    "prepublishOnly": "yarn clean:files && yarn copy:files && yarn write:template",
    "start:docs": "start-storybook -p 6006",
    "build:docs": "build-storybook",
    "prepare": "is-ci || husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
